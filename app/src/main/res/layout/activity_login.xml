<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/m0_background"
    android:orientation="vertical"
    tools:context="com.diandian.ycdyus.moneymanager.ui.LoginActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/m01_status_login" />

            <ImageView
                android:id="@+id/btn_check_state"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/m01_button_signin" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@mipmap/m02_textfield_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="100dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_marginLeft="40dp"
                android:hint="请输入用户名"
                android:id="@+id/edittext_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@mipmap/m03_textfield_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="100dp"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:id="@+id/edittext_password"
                android:hint="请输入密码"
                android:background="@null"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/m06_button_login" />

        <ImageView
            android:id="@+id/skip"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/m07_button_skip" />
    </LinearLayout>


</RelativeLayout>
